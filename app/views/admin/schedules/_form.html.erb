<div class="modal fade" id="<%= pslotname %>" tabindex="-1">
  <div class="modal-dialog">
    <%= form_with(url: admin_schedules_path, class: "modal-content") do |form| %>
      <div class="modal-header">
        <h5 class="modal-title text-dark">New Schedule</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" name="day" value="<%= day %>">
        <input type="hidden" name="start" value="<%= i %>">
        <p class="text-dark text-start"><%= "Would you like to create on an opening on #{day} from #{i} to #{i + 1}" %></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
        <button type="submit" class="btn btn-primary">Yes</button>
      </div>
    <% end %>
  </div>
</div>
