<div class="modal fade" id="popup-<%= text_datetime datetime %>" tabindex="-1">
  <div class="modal-dialog">
    <%= form_with(url: admin_popups_path(datetime: datetime), class: "modal-content") do |form| %>
      <div class="modal-header">
        <h5 class="modal-title text-dark">Popup</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p class="text-dark text-start"><%= "Would you like to close this opening for today" %></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
        <button type="submit" class="btn btn-primary">Yes</button>
      </div>
    <% end %>
  </div>
</div>
