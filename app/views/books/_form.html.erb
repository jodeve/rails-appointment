<div class="row justify-content-center py-5">
  <div class="col-lg-4">
    <div class="card rounded-3 py-4 ">
      <div class="d-flex align-items-center mb-3">
        <h4 class="text-primary m-0 px-4">
          <%= "Book Appointment" %>
        </h4>
      </div>
      <div class="px-4">
        <p class="text-muted m-0">
          <%= fa_icon "calendar", class: "me-2" %><%= "#{readable_date @date} - #{@date.strftime('%A')}" %>
        </p>
        <small class="text-muted m-0 mb-4">
          <%= fa_icon "clock-o", class: "me-2" %><%= "#{@date.strftime('%l')} - #{@date.advance(:hours => +1).strftime('%l')}" %></<span>
        </small>
        <%= form_with(model: book) do |form| %>

          <%= form.hidden_field :on_at, value: @date %>

          <div class="mt-4">
            <%= form.label :name, class: "form-label" %>
            <%= form.text_field :name, class: "form-control rounded-pill" %>
          </div>

          <div class="mt-4">
            <%= form.label :phone, class: "form-label" %>
            <%= form.text_field :phone, class: "form-control rounded-pill" %>
          </div>

          <div class="actions mt-4">
            <%= form.submit "Book", class: "btn btn-primary rounded-pill" %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
